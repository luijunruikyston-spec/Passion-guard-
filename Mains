            <section class="content-page fade-in">
                <h2>Contact Us</h2>
                <p>Have questions about online security or need help with our extension? We're here to help!</p>
                
                <form class="contact-form" onsubmit="submitContact(event)">
                    <div class="form-group">
                        <label for="contactName">Name</label>
                        <input type="text" id="contactName" required>
                    </div>
                    <div class="form-group">
                        <label for="contactEmail">Email</label>
                        <input type="email" id="contactEmail" required>
                    </div>
                    <div class="form-group">
                        <label for="contactSubject">Subject</label>
                        <input type="text" id="contactSubject" required>
                    </div>
                    <div class="form-group">
                        <label for="contactMessage">Message</label>
                        <textarea id="contactMessage" rows="5" required></textarea>
                    </div>
                    <button type="submit" class="submit-btn">Send Message</button>
                </form>
            </section>
        </div>
    </main>

    <script>
        // Sample news data
        let newsData = [
            {
                title: "New SMS Phishing Scam Targets Singapore Bank Customers",
                summary: "Scammers are impersonating major Singapore banks through SMS messages, asking customers to click on malicious links to 'verify' their accounts. The messages appear to come from legitimate bank numbers.",
                source: "ScamAlert.sg",
                date: "2025-06-25"
            },
            {
                title: "Fake Investment Platform Scam Costs Victims $2.3M",
                summary: "A sophisticated fake investment platform has defrauded over 150 Singaporeans, promising unrealistic returns on cryptocurrency investments. Police warn against unsolicited investment opportunities.",
                source: "CNA Singapore",
                date: "2025-06-23"
            },
            {
                title: "Romance Scam Alert: Online Dating Fraud Increases 40%",
                summary: "Cybercriminals are increasingly using dating apps and social media to build fake relationships before requesting money transfers. Victims lost an average of $15,000 each in Q2 2025.",
                source: "ScamAlert.sg",
                date: "2025-06-20"
            },
            {
                title: "E-commerce Scam: Fake Online Stores Steal Payment Data",
                summary: "Fraudulent online shopping websites are targeting consumers with unrealistic discounts, stealing credit card information and personal data without delivering products.",
                source: "CNA Singapore",
                date: "2025-06-18"
            }
        ];

        // Navigation functions
        function showPage(pageId) {
            // Hide all pages
            document.querySelectorAll('.page').forEach(page => {
                page.classList.remove('active');
            });
            
            // Show selected page
            document.getElementById(pageId).classList.add('active');
            
            // Update navigation links
            document.querySelectorAll('.nav-link').forEach(link => {
                link.classList.remove('active');
            });
            event.target.classList.add('active');
        }

        function toggleMobileMenu() {
            const navLinks = document.getElementById('navLinks');
            navLinks.classList.toggle('active');
        }

        // News functions
        function renderNews() {
            const newsGrid = document.getElementById('newsGrid');
            newsGrid.innerHTML = '';
            
            newsData.forEach((article, index) => {
                const newsCard = document.createElement('div');
                newsCard.className = 'news-card';
                newsCard.innerHTML = `
                    <div class="news-meta">
                        <span>üì∞ ${article.source}</span>
                        <span>${formatDate(article.date)}</span>
                    </div>
                    <h3>${article.title}</h3>
                    <p>${article.summary}</p>
                    <a href="#" class="read-more" onclick="readMore(${index})">Read More</a>
                `;
                newsGrid.appendChild(newsCard);
            });
        }

        function addNews(event) {
            event.preventDefault();
            
            const title = document.getElementById('newsTitle').value;
            const summary = document.getElementById('newsSummary').value;
            const source = document.getElementById('newsSource').value;
            
            const newArticle = {
                title: title,
                summary: summary,
                source: source,
                date: new Date().toISOString().split('T')[0]
            };
            
            newsData.unshift(newArticle);
            renderNews();
            
            // Clear form
            document.getElementById('newsTitle').value = '';
            document.getElementById('newsSummary').value = '';
            document.getElementById('newsSource').value = '';
            
            alert('News article added successfully!');
        }

        function readMore(index) {
            const article = newsData[index];
            alert(`Full Article: ${article.title}\n\n${article.summary}\n\nSource: ${article.source}\nDate: ${formatDate(article.date)}\n\nThis would normally link to the full article on the source website.`);
        }

        function formatDate(dateString) {
            const date = new Date(dateString);
            return date.toLocaleDateString('en-SG', { 
                year: 'numeric', 
                month: 'short', 
                day: 'numeric' 
            });
        }

        // Extension functions
        function downloadExtension() {
            alert('Chrome Extension download would start here!\n\nNote: This is a demo. In a real implementation, this would link to the Chrome Web Store or trigger a download of the .crx file.');
        }

        // Contact form
        function submitContact(event) {
            event.preventDefault();
            
            const name = document.getElementById('contactName').value;
            const email = document.getElementById('contactEmail').value;
            const subject = document.getElementById('contactSubject').value;
            const message = document.getElementById('contactMessage').value;
            
            alert(`Thank you for your message, ${name}!\n\nWe'll get back to you at ${email} within 24 hours.\n\nSubject: ${subject}`);
            
            // Clear form
            document.getElementById('contactName').value = '';
            document.getElementById('contactEmail').value = '';
            document.getElementById('contactSubject').value = '';
            document.getElementById('contactMessage').value = '';
        }

        // Initialize the page
        document.addEventListener('DOMContentLoaded', function() {
            renderNews();
            
            // Add smooth scrolling effect
            document.addEventListener('scroll', function() {
                const header = document.querySelector('header');
                if (window.scrollY > 50) {
                    header.classList.add('scrolled');
                } else {
                    header.classList.remove('scrolled');
                }
            });
            
            // Add staggered animation to cards
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };
            
            const observer = new IntersectionObserver(function(entries) {
                entries.forEach((entry, index) => {
                    if (entry.isIntersecting) {
                        setTimeout(() => {
                            entry.target.style.animation = 'slideUp 0.8s cubic-bezier(0.4, 0, 0.2, 1) forwards';
                            entry.target.style.opacity = '1';
                        }, index * 100);
                    }
                });
            }, observerOptions);
            
            // Initially hide cards for animation
            document.querySelectorAll('.news-card, .feature-card').forEach((card, index) => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(30px)';
                observer.observe(card);
            });

            // Add parallax effect to hero section
            document.addEventListener('scroll', function() {
                const scrolled = window.pageYOffset;
                const parallax = document.querySelector('.hero');
                if (parallax) {
                    const speed = scrolled * 0.5;
                    parallax.style.transform = `translate3d(0, ${speed}px, 0)`;
                }
            });
        });

        // Close mobile menu when clicking outside
        document.addEventListener('click', function(event) {
            const navLinks = document.getElementById('navLinks');
            const mobileMenu = document.querySelector('.mobile-menu');
            
            if (!mobileMenu.contains(event.target) && !navLinks.contains(event.target)) {
                navLinks.classList.remove('active');
            }
        });
    </script>
</body>
</html>
